ScreenManager:
    LoginScreen:
        name: "LoginScreen"
    RegisterScreen:
        name: "RegisterScreen"
    LandingScreen:
        name: "LandingScreen"
    ManageVocabScreen:
        name: "ManageVocabScreen"
    RandomVocabScreen:
        name: "RandomVocabScreen"
    VocabChooserScreen:
        name: "VocabChooserScreen"
    VocabCardScreen:
        name: "VocabCardScreen"
    PerVocabManageScreen:
        name: "PerVocabManageScreen"


<JapaneseTextField@MDTextField>:
    font_name: 'Japanese.ttc'
    input_type: 'text'

<H2> :
    font_name: "Japanese.ttc"

<LoginScreen>:
    FitImage:
        source:"material-design-abstract-4k_1608576664.jpg"
    MDCard:
        size_hint: .6,.8
        pos_hint: {"center_x":.5, "center_y":.5}
        orientation:"vertical"

        MDLabel:
            size_hint: 1,.1
            font_style:"H2"
            font_name:"Japanese.ttc"
            text:"Login"
            halign:"center"
        MDTextField:
            id: uname
            hint_text:"Enter username or email"
            icon_right:"account"
            size_hint: .8,.1
            pos_hint: {"center_x":.5}
        MDTextField:
            id: pwd
            hint_text:"Enter password"
            icon_right:"eye-off"
            size_hint: .8,.1
            pos_hint: {"center_x":.5}
            password: True
        MDBoxLayout:
            size_hint: 1,.1
            MDRaisedButton:
                id : login
                text:"Login"
                size_hint: .5,1
                md_bg_color: "#a8dadc"
                pos_hint: {"center_x":.5}
                on_press: root.login()
            MDRaisedButton:
                id : register
                text:"Register"
                size_hint: .5,1
                md_bg_color: "#e63946"
                pos_hint: {"center_x":.5, "center_y":.5}
                on_press:
                    root.manager.current = "RegisterScreen"
                    root.manager.transition.direction = "left"

<RegisterScreen>:
    FitImage:
        source:"material-design-abstract-4k_1608576664.jpg"
    MDCard:
        size_hint: .6,.8
        pos_hint: {"center_x":.5, "center_y":.5}
        orientation:"vertical"

        MDLabel:
            size_hint: 1,.1
            font_style:"H2"
            text:"Register"
            halign:"center"
        MDTextField:
            id: uname
            hint_text:"Enter username"
            icon_right:"account"
            size_hint: .8,.1
            pos_hint: {"center_x":.5}
        MDTextField:
            id: email
            hint_text:"Enter email"
            icon_right:"email"
            size_hint: .8,.1
            pos_hint: {"center_x":.5}
        MDTextField:
            id: pwd
            hint_text:"Enter password"
            icon_right:"eye-off"
            size_hint: .8,.1
            pos_hint: {"center_x":.5}
            password: True
            helper_text: ""
            helper_text_mode: "on_error"
        MDTextField:
            id: cpwd
            hint_text:"Confirm password"
            icon_right:"eye-off"
            size_hint: .8,.1
            pos_hint: {"center_x":.5}
            password: True
            helper_text: "Passwords do not match"
            helper_text_mode: "on_error"
        MDBoxLayout:
            size_hint: 1,.1
            MDRaisedButton:
                id : backtologin
                text:"Back"
                size_hint: .5,1
                md_bg_color: "#e63946"
                pos_hint: {"center_y":.5}
                on_press:
                    root.manager.current = "LoginScreen"
                    root.manager.transition.direction = "right"
            MDRaisedButton:
                id : register
                text:"Register"
                size_hint: .5,1
                md_bg_color: "#a8dadc"
                pos_hint: {"center_y":.5}
                on_press:
                    root.register()
                    root.manager.current = "LoginScreen"

<LandingScreen>:
    FitImage:
        source:"material-design-abstract-4k_1608576664.jpg"
    MDCard:
        size_hint: .6,.8
        pos_hint: {"center_x":.5, "center_y":.5}
        orientation:"vertical"
        padding: 20
        MDLabel:
            id:app_name
            size_hint: 1,.1
            font_style:"H4"
            font_name:"Japanese.ttc"
            text:"日本語 Vocabulary App"
            halign:"center"

        MDLabel:
            id: welcome_banner
            size_hint: 1,.1
            font_style:"H5"
            font_name:"Japanese.ttc"
            text:"-"
            halign:"center"
        MDBoxLayout:
            size_hint: 1,.7
            orientation:"vertical"
            padding:20
            MDRaisedButton:
                id : managevocab
                text:"Manage Vocab"
                size_hint: 1,.2
                text_color: 0,0,0,1
                font_size: 100
                md_bg_color: "#a8dadc"
                pos_hint: {"center_y":.5}
                on_press:
                    root.manager.current = "ManageVocabScreen"
                    root.manager.transition.direction = "left"
            MDRaisedButton:
                id : randomvocab
                text:"Random Vocab"
                size_hint: 1,.2
                text_color: 0,0,0,1
                font_size: 100
                md_bg_color: "#a8dadc"
                pos_hint: {"center_y":.5}
                on_press:
                    root.manager.current = "RandomVocabScreen"
                    root.manager.transition.direction = "left"
            MDRaisedButton:
                id : vocabchooser
                text:"Choose Vocab"
                size_hint: 1,.2
                text_color: 0,0,0,1
                font_size: 100
                md_bg_color: "#a8dadc"
                pos_hint: {"center_y":.5}
                on_press:
                    root.manager.current = "VocabChooserScreen"
                    root.manager.transition.direction = "left"
        MDBoxLayout:
            size_hint: 1,0.1
            padding:20
            MDRaisedButton:
                id : logout
                text:"Logout"
                size_hint: .5,1
                pos_hint: {"center_x":.5}
                md_bg_color: "#e63946"
                on_press: root.logout()

<ManageVocabScreen>:
    MDRaisedButton:
        id : back
        text:"Back"
        size_hint: .2,.1
        pos_hint: {"center_x":.1 , "center_y":.95}
        md_bg_color: "#e63946"
        on_press:
            root.manager.current = "LandingScreen"
            root.manager.transition.direction = "left"
    MDBoxLayout:
        pos_hint: {"center_x":.5, "center_y":.2}
        size_hint: 1,.1
        MDBoxLayout:
            size_hint: .5,1
            MDRaisedButton:
                id : addvocab
                text:"Add Vocab"
                size_hint: 1,1
                md_bg_color: "#a8dadc"
                on_press:
                    root.manager.current = "PerVocabManageScreen"
                    root.manager.transition.direction = "left"
            MDRaisedButton:
                id : editvocab
                text:"Edit Vocab"
                size_hint: 1,1
                md_bg_color: "#a8dadc"
                on_press:
                    root.manager.current = "PerVocabManageScreen"
                    root.manager.transition.direction = "left"
            MDRaisedButton:
                id : deletevocab
                text:"Delete Vocab"
                size_hint: 1,1
                md_bg_color: "#a8dadc"
                on_press:
                    root.manager.current = "PerVocabManageScreen"
                    root.manager.transition.direction = "left"

<PerVocabManageScreen>:
    MDRaisedButton:
        id : back
        text:"Back"
        size_hint: .2,.1
        pos_hint: {"center_x":.1 , "center_y":.95}
        md_bg_color: "#e63946"
        on_press:
            root.manager.current = "ManageVocabScreen"
            root.manager.transition.direction = "right"
    MDBoxLayout:
        pos_hint: {"center_x":.5, "center_y":.2}
        size_hint: 1,.1
        MDBoxLayout:
            size_hint: 1,1
            MDLabel:
                id: vocab
                size_hint: .5,1
                text:"Vocab"
                halign:"center"
            JapaneseTextField:
                id: selected_lesson
                size_hint: .5,1
                hint_text:"Lesson"
                helper_text: "Enter lesson number"
                helper_text_mode: "on_error"
            JapaneseTextField:
                id: selected_part
                size_hint: .5,1
                hint_text:"Part of Lesson"
                helper_text: "Enter part number"
                helper_text_mode: "on_error"





